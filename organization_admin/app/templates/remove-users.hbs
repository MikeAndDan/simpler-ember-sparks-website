<h1>Delete Users</h1>
<p>Mark users for removal, then confirm at the bottom</p>

<div class="row">
  <div class="col-xs-6">
    <h2>Users</h2>
    <ul>
      {{#each safeUsers as |user|}}
        <li {{action 'markUser' user}}>{{user.email}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="col-xs-6">
    <h2>Users to be removed</h2>
    <ul>
      {{#each markedUsers as |user|}}
        <li {{action 'markUser' user}}>{{user.email}}</li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="pull-right">
  <div class="btn btn-primary" {{action "cancel"}}>Cancel</div>
  <div class="btn btn-danger" {{action "removeUsers"}}>Remove Selected Users</div>
</div>
