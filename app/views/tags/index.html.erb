<h2>What do you want to learn today?</h2>

<div class="row">
  <div class="col-md-4 col-xs-12">
    <h3>Series</h3>
    <ul>
    <% @series.each do |series| %>
      <li>
        <%= link_to series do %><h4><%= series.name %></h4><% end %>
        Length: <%= series.taggings.length %> videos, <%= series.seconds / 60 %> minutes<br />
        <%= series.description %>

      </li>
    <% end %>
    </ul>
  </div>
  <div class="col-md-8 col-xs-12">
    <h3>Subjects</h3>
    <div class="row">
    <ul>
    <% @subjects.each do |subject| %>
      <div class="col-md-6 col-xs-12"><li>
        <%= link_to subject do %><h4><%= subject.name %></h4><% end %>
        Length: <%= subject.taggings.length %> videos, <%= subject.seconds / 60 %> minutes
      </li></div>
    <% end %>
    </ul>
    </div>
  </div>
</div>