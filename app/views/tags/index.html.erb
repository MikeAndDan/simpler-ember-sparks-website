<section class="explore-jumbotron">
  <div class="jumbotron text-center explore">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h1>What do you want to learn today?</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="explore-section">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-sm-8 col-xs-12">
        <ul class="tag-list">
          <% @series.each do |series| %>
            <li class="media">
              <div class="media-body">
                <%= link_to series do %><h4 class="media-heading"><%= series.name %></h4><% end %>
                Length: <%= series.taggings.length %> videos, <%= series.seconds / 60 %> minutes<br />
                <%= series.description %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-3 col-sm-4 col-xs-12">
        <br>
        <div id="tag_cloud">
          <% tag_cloud @subjects, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag), class: css_class %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :title, "Explore- EmberScreencasts" %>
<% content_for :meta_description, "View Ember.js videos, sorted by subject." %>
