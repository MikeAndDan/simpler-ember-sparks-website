<section>
  <div class="jumbotron video_list">
    <div class="container">
      <% if @tag %>
        <div class="row">
          <div class="col-md-6">
            <h1 class="modified-headline"><%= @tag.name %></h1>
            <br>
            <div class="tag-description"><%= @tag.description %></div>
          </div>
          <div class="col-md-6">
            <h2 class="pull-right"><%= @tag.taggings.length %> videos, <%= @tag.seconds / 60 %> minutes</h2>
          </div>
        </div>
      <% else %>
        <h1 class="text-center">Latest Videos</h1>
      <% end %>
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row"></div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div>
        <ul class="media-list">
          <% @posts.each do |post| %>
            <%= render 'posts/post_listing', post: post%>
          <% end %>
        </ul>
      </div>
    </div>
    <% if @latest %>
      <div class="row text-center">
        <p>This has been the latest 10 videos...</p>
        <h2><a class="btn btn-primary light-button" href="/posts">See All Videos</a></h2>
      </div>
    <% end %>
  </div>
</section>
