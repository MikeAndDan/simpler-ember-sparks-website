<h1>Most Recent Videos</h1>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <%= image_tag post.thumbnail_image %>
      <h2><%= link_to post.title, post %></h2>
      
      <div class="published-on">
        <em>Published on <%= post.publish_date %></em>
      </div>

      <div class="description"><%= post.description %></div>
    </div>
  <% end %>
</div>