<% content_for :head do %>
  <meta property="og:image" content="<%= @post.thumbnail_image %>">

  <script src="//fast.wistia.com/static/embed_shepherd-v1.js"></script>
  <script>
    wistiaEmbeds.onFind(function(video) {
      video.videoFoam(true);
      video.addPlugin("resumable", {
        src: "//fast.wistia.com/labs/resumable/plugin.js"
      });
    });
  </script>
<% end %>
<% content_for :title, @post.title %>
<% content_for :meta_description, @post.description %>

<div id="single-video">
  <section>
    <div class="jumbotron text-center video_single">
      <div class="container">
        <% if @series %>
          <h5 class="text-white text-uppercase">Series: <%= @series.name %></h5>
         <% end %>
        <h3 class="title_callout"><%= @post.title %></h3>
        <h5 class="text-white">Published on <%= @post.publish_date.strftime('%b %d, %Y') %></h5>
      </div>
    </div>
  </section>

  <section class="video_single">
    <div class="container">

      <p id="notice"><%= notice %></p>
      <div class="row">
        <div class="col-md-12">
          <% if @viewable_by_user %>
            <div id="video-box">
              <%= render 'video', wistia_embed: @post.wistia_embed %>
            </div>
          <% else %>
            

            <div class="sales-box">
              <h2>Invest in yourself</h2>
              <p class="lead">Pro subscribers get access to all videos and content</p>
              <%# rails helper number_to_currency for internationalization %>
              <div>
                <a href="/sales" class="btn btn-lg btn-success">
                  Become a Pro for <%= number_to_currency(10, precision:0) %>/month
                </a>
              </div>
              <% unless current_user %>
                <a href="/users/sign_in" class="btn btn-lg btn-link top-buffer">Already a Subscriber? Log in</a>
              <% end %>
            </div>          

          <% end %>
        </div>
        
      </div>
    </div>
  </section>

  <div class="container top-buffer">
    <div class="row">
      <div class="col-md-8">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#notes" aria-controls="notes" role="tab" data-toggle="tab">Notes</a></li>
          <li role="presentation"><a href="#transcript" aria-controls="transcript" role="tab" data-toggle="tab">Transcript</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="notes">
            <%= raw @markdown.render @post.description %>
            <% if @post.links && @post.links.length > 0 %>
              <br>
              <p><strong>Links</strong></p>
              <%= raw @markdown.render(@post.links) %>
            <% end %>
            <% if @code_present %>
              <section id="code">
                    <h2>Code</h2>
                    <% if @viewable_by_google %>
                      <%= @markdown.render(@post.code).html_safe %>
                    <% else %>
                      <p>Code is for subscribers only.</p>
                    <% end %>
              </section>
            <% end %>
          </div>
          <div role="tabpanel" class="tab-pane" id="transcript">
            <% if @transcript_present %>
              <section id="transcript">
                    <h2>Transcript</h2>
                    <% if @viewable_by_google %>
                      <%= raw @markdown.render @post.transcript %>
                    <% else %>
                      <p>Transcript is for subscribers only.</p>
                    <% end %>
              </section>
            <% end %>
          </div>
        </div>
      </div>
      
      <% if @series %>
        <div class="col-md-4">
          <%= link_to @series.name, tag_path(@series), class: "btn btn-success well-title" %>
          <div class="series-list side-well">
            <ol>
              <% @series.posts.published.recent_first.reverse_each do |post| %>
                <li><%= link_to post.display_title, post_path(post) %></li>
              <% end %>
            </ol>
          </div>
        </div>
      <% end %>
    </div>


  
  
  <section id="comments" align="center" class="top-buffer">
      <div id="disqus_thread"></div>
  </section>
