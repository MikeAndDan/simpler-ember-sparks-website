<!--form rendering from /billing when subbed-->
<!-- collect with Stripe.js, convert as a single token, send token to server -->

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<div class="container">
  <form action="/subscribe" method="POST" id="payment-form">
    <!--hidden field current_user.email passed to Stripe? -->
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="16" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="3" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YY)</span>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input type="text" size="2" data-stripe="exp-year"/>
  </div>

  <button type="submit">Submit Payment</button>
</form>
</div>
