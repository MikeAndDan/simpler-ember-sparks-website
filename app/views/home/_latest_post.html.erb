<div class="media clickable-media-link <%= if post.free then 'free' end %>" data-url="<%= post_path(post) %>">
  <div class="media-left">
    <%= link_to image_tag(post.thumbnail_image, class: "media-object", style: "width:100px"), post %>
  </div>

  <div class="media-body">
    <h4 class="media-heading"><%= post.title %></h2>
    <p>
      <% post.tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %>
      <% end %>
    </p>
    <%= raw @markdown.render post.description %>
  </div>
</div>
