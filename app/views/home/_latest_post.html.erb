<div class="post row">
  <div class="col-md-12">
    <%= link_to image_tag(post.thumbnail_image, class: "img-responsive"), post %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <h3 class="index-title"><%= link_to post.title, post %></h3>
    <div class="published-on">
      <small>
        Published on <%= post.publish_date %> -- <%= post.difficulty %>
        <% post.tags.each do |tag| %>
          -- <%= link_to tag.name, tag_path(tag) %>
        <% end %>
      </small>
    </div>
    <div class="description"><%= raw @markdown.render post.description %></div>
    <% @post_type = if post.free then 'free' else 'pro' end %>
    <%= link_to "watch #{@post_type} video (#{post.readable_time})", post, class: 'btn watch-btn' %>
  </div>
</div>
