{{component 'tags/tag/edit-fields' model=model}}

<button {{action 'save'}}>Save</button>
<hr>
<div class="row">
  <div class="col-md-6">
    <h4>Tagged videos</h4>
    <ul>
    {{#each model.taggings as |tagging|}}
      <li {{action 'removePost' tagging}}>{{tagging.post.title}}</li>
    {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h4>Taggable videos</h4>
    {{#each unusedPosts as |post|}}
      <li {{action 'addPost' post}}>{{post.title}}</li>
    {{/each}}
  </div>
</div>
